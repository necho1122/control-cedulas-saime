generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root@127.0.0.1:3306/sistema_gestion_cedulas"
}

model Documento {
  id          Int      @id @default(autoincrement())
  nombre      String
  cedula      String   @unique
  tipoTramite String
  fechaEmision DateTime
  estado      String
  carpeta     String
  archivador  String
  posicion    String
  historial   Historial[]
}

model Historial {
  id          Int      @id @default(autoincrement())
  documentoId Int
  cambio      String
  fecha       DateTime @default(now())
  Documento   Documento @relation(fields: [documentoId], references: [id])
}

model Usuario {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  rol      String
}
